<?xml version="1.0" encoding="UTF-8"?>
<macro>
    <command name="PING" macro_code="3000" macro_name="PING" command_group="7" para_num="1" maindisplay="1 2 3"
            must_give="1">

        <para index="1" name="ipAddress" description="Destination IP Address" type="text"
                pattern="/^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/">

        </para>
        <para index="2" name="packetcount" description="Packet Count" type="number">
            <range min="1" max="100"/>
        </para>
        <para index="3" name="packetsize" description="Packet Size" type="number">
            <range min="0" max="65507"/>
        </para>
    </command>
</macro>
