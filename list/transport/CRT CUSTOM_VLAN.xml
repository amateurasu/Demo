<?xml version="1.0" encoding="UTF-8"?>
<macro>
    <command name="CRT CUSTOM_VLAN" macro_code="3000" macro_name="Create custome vlan" command_group="7" para_num="5"
            maindisplay="1 2 3 4 5" must_give="1 2 3 4 5">

        <para index='1' name='vlanId' description='Vlan ID' type='number' default='0'>
            <range min='1' max='4096'/>
        </para>

        <para index="2" name="interface" description="Physical Interface of Vlan" type="text">
        </para>

        <para index="3" name="vlanName" description="Vlan Name" type="text">
        </para>

        <para index="4" name="vlanIp" description="Vlan IP" type="text"
                pattern="/^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/">
        </para>

        <para index="5" name="vlanNetmask" description="Vlan Netmask" type="text"
                pattern="/^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/">
        </para>

    </command>
</macro>
