            <list name='macPort2' value='macPort2'/>
            <list name='macPort3' value='macPort3'/>
            <list name='macPort4' value='macPort4'/>
            <list name='macPort5' value='macPort5'/>
            <list name='macPort6' value='macPort6'/>
            <list name='macPort7' value='macPort7'/>
            <list name='errata' value='errata'/>
        </para>
        <para index="5" name="targetInfo" description="Target Info" type="text" minlength="1" maxlength="64">
        </para>
    </command>
</macro>
