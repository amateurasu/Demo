            maindisplay="1 2 3 4 5" must_give="1 2 3 4 5">

        <para index="1" name="RackNumber" description="BBC Rack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="2" name="SubRackNumber" description="BBC Subrack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="3" name="SlotNumber" description="BBC" type="list" default="2">
            <list name='BBC1' value='2'/>
            <list name='BBC2' value='3'/>
            <list name='BBC3' value='4'/>
        </para>

        <para index="4" name="hwTarget" description="Hardware Target" type="list">
            <list name='cardSN' value='cardSN'/>
            <list name='date' value='date'/>
            <list name='portsNumber' value='portsNumber'/>
