<?xml version="1.0" encoding="UTF-8"?>
<macro>
    <command name="CHG RRU_BW" macro_code="3000" macro_name="Change RRU bandWidth" command_group="7" para_num="5"
            maindisplay="1 2 3 4 5" must_give="1 2 3 4 5">

        <para index="1" name="RackNumber" description="Connected BBC Rack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="2" name="SubRackNumber" description="Connected BBC Subrack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="3" name="SlotNumber" description="BBC" type="list" default="2">
            <list name='BBC1' value='2'/>
            <list name='BBC2' value='3'/>
            <list name='BBC3' value='4'/>
        </para>
        <para index="4" name="PortNumber" description="Connected CPRI Port Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
        </para>

        <para index="5" name="bandWidth" description="Bandwidth" type="list">
            <list name="1.4" value="0" description="1.4 MB"/>
            <list name="3" value="1" description="3 MB"/>
            <list name="5" value="2" description="5 MB"/>
            <list name="10" value="3" description="10 MB"/>
            <list name="15" value="4" description="15 MB"/>
            <list name="20" value="5" description="20 MB"/>
        </para>

    </command>
</macro>
