<?xml version="1.0" encoding="UTF-8"?>
<macro>
    <command name="SWC CARDPWR" macro_code="3000" macro_name="Switch Card Power" command_group="7" para_num="3"
            maindisplay="1 2 3" must_give="1 2 3">

        <para index="1" name="RackNumber" description="Rack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="2" name="SubRackNumber" description="Subrack Number" type="list" default="0">
            <list name='0' value='0'/>
            <list name='1' value='1'/>
            <list name='2' value='2'/>
            <list name='3' value='3'/>
        </para>
        <para index="3" name="SlotNumber" description="Slot Number" type="number" default="5">
            <range min="0" max="15"/>
        </para>
        <para index="4" name="Switch" description="Switch" type="list">
            <list name="ON" value="1" description="Switch ON"/>
            <list name="OFF" value="0" description="Switch OFF"/>
        </para>

    </command>
</macro>
